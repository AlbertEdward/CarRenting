@model CarFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-3 col-lg-8 offset-xl-3 col-xl-6">

        <form method="post">
          <div class="form-group">
            <label asp-for="Brand"></label>
            <input asp-for="Brand" class="form-control" placeholder="Audi, BMW, Mercedes, etc...">
            <span asp-validation-for="Brand" class="small text-danger"></span>
          </div>
            <div class="form-group">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" placeholder="A4, 3 Series, S-Class, etc...">
            <span asp-validation-for="Model" class="small text-danger"></span>
          </div>
            <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="4" class="form-control" placeholder="Detailed information about the car..."></textarea>
            <span asp-validation-for="Description" class="small text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Your URL here...">
            <span asp-validation-for="ImageUrl" class="small text-danger"></span>
          </div>
            <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
            </div>
          <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control">
                @foreach(var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
          </div>
          <div class="form-check form-switch mt-2">
          <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Show / Hide </label>
          </div>
          <input class="btn btn-primary mt-2" type="submit" value="Save"/>
    </form>
    </div>
</div>