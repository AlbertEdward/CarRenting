@model AddCarFormModel
@{
    ViewData["Title"] = "Add Car";
}


<div class="row">
    <div class="col-sm-12 offset-lg-3 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin">Add Car</h2>

        <form method="post">
          <div class="form-group">
            <label asp-for="Make"></label>
            <input asp-for="Make" class="form-control" placeholder="Audi, BMW, Mercedes, etc...">
          </div>
            <div class="form-group">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" placeholder="A4, 3 Series, S-Class, etc...">
          </div>
            <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="4" class="form-control" placeholder="Detailed information about the car..."></textarea>
          </div>
            <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Your URL here...">
          </div>
            <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
          </div>
          <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control">
                @foreach(var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
          </div>

          <input class="btn btn-primary mt-2" type="submit" value="Save"/>

    </form>
    </div>
</div>