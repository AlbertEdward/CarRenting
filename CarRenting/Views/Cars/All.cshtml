@model AllCarsQueryModel

<form method="get">
    <div class="row mb-5">
        <div class="form-group col-md-3">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Audi, BMW, Mercedes, etc...">
        </div>
        
         <div class="form-group col-md-3">
        </div>

         <div class="form-group col-md-3">
        </div>
    </div>
</form>

<div class="row">
        @foreach (var car in Model.Cars)
        {
        <div class="card mb-3" style="width: 18rem;">
          <img class="card-img-top" src="@car.ImageUrl" alt="@car.Make @car.Model @car.Year">
          <div class="card-body text-center">
            <h5 class="card-title">@car.Make @car.Model (@car.Year) - @car.Category</h5>
            <p class="card-text">Some text about car...</p>
            <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">View more</a>
          </div>
        </div>
        }
</div>