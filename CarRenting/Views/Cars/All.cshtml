@model AllCarsQueryModel

@{
    ViewData["Title"] = "All Cars!";
}

<form method="get">
    <div class="row mb-5">
        <div class="form-group col-md-3">
            <label asp-for="Brand"></label>
            <select asp-for="Brand" class="form-control">
                <option value="">All</option>
                @foreach(var brand in Model.Brands)
                {
                    <option value="@brand">@brand</option>
                }
            </select>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Date Created</option>
                    <option value="1">Year</option>
                    <option value="2">Brand And Model</option>
                </select>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Audi, BMW, Mercedes, etc...">
        </div>
         <div class="form-group col-md-3">
        </div>
         <div class="form-group col-md-3">
        </div>
    </div>
</form>

<div class="row">
        @foreach (var car in Model.Cars)
        {
        <div class="card mb-3" style="width: 18rem;">
          <img class="card-img-top" src="@car.ImageUrl" alt="@car.Make @car.Model @car.Year">
          <div class="card-body text-center">
            <h5 class="card-title">@car.Make @car.Model (@car.Year) - @car.Category</h5>
            <p class="card-text">Some text about car...</p>
            <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">View more</a>
          </div>
        </div>
        }
</div>


@{
    var nextPage = Model.CurrentPage + 1;

    var previousPage = Model.CurrentPage - 1;
    if(previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPages = Math.Ceiling((double)Model.TotalCars / AllCarsQueryModel.CarsPerPage);

}
<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty) float-left"
        asp-controller="Cars"
        asp-action="All"
        asp-route-currentPage="@previousPage"
        asp-route-brand="@Model.Brand"
        asp-route-searchTerm="@Model.SearchTerm"
        asp-route-sorting="((int)@Model.Sorting)"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary @(nextPage > maxPages ? "disabled" : string.Empty) float-right"
        asp-controller="Cars"
        asp-action="All"
        asp-route-currentPage="@nextPage"
        asp-route-brand="@Model.Brand"
        asp-route-searchTerm="@Model.SearchTerm"
        asp-route-sorting="((int)@Model.Sorting)">>></a>
    </div>

</div>