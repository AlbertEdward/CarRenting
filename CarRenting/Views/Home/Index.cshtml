@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}

@{
    var cars = Model.Cars;
    var firstCar = cars.Any() ? cars[0] : null;
    var secondCar = cars.Count > 1 ? cars[1] : null;
    var thirdCar = cars.Count > 2 ? cars[2] : null;
}

@if (!cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for renting cars!</h1>
        <p class="lead">There are no cars in the system, why don't you just add one?</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add car</a>
        </p>
    </div>
}

<div id="carouselExampleControls" class="carousel carousel-dark slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    @if (firstCar != null)
      {
        <div class="carousel-item active" >
          <img class="d-block w-75" src="@firstCar.ImageUrl" alt="@firstCar.Make @firstCar.Model @firstCar.Year">
          <div class="carousel-caption d-none d-md-block">
            <h5>@firstCar.Make @firstCar.Model (@firstCar.Year)</h5>
            <p>Some text about car</p>
          </div>
        </div>
      }
    @if (secondCar != null)
      {
        <div class="carousel-item">
          <img class="d-block w-75" src="@secondCar.ImageUrl" alt="@secondCar.Make @secondCar.Model @secondCar.Year">
          <div class="carousel-caption d-none d-md-block">
            <h5>@secondCar.Make @secondCar.Model (@secondCar.Year)</h5>
            <p>Some text about car</p>
          </div>
        </div>
      }
      @if (thirdCar != null)
      {
        <div class="carousel-item">
          <img class="d-block w-75" src="@thirdCar.ImageUrl" alt="@thirdCar.Make @thirdCar.Model @thirdCar.Year">
          <div class="carousel-caption d-none d-md-block">
            <h5>@thirdCar.Make @thirdCar.Model (@thirdCar.Year)</h5>
            <p>Some text about car</p>
          </div>
        </div>
      }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
    </button>
</div>
