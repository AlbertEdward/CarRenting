@model List<CarListingViewModel>

@{
    ViewData["Title"] = "Welcome!";
}

@{
    var firstCar = Model.Any() ? Model[0] : null;
    var secondCar = Model.Count > 1 ? Model[1] : firstCar;
    var thirdCar = Model.Count > 2 ? Model[2] : secondCar;
}

@if(!Model.Any())
{
  <div class="jumbotron">
  <h1 class="display-4">Hello, world!</h1>
  <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
  <hr class="my-4">
  <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
  <p class="lead">
    <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" href="#" role="button">Add new car</a>
  </p>
</div>
}

<div class="text-center">
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
      @if (firstCar != null)
      {
        <div class="carousel-item">
          <img class="d-block w-100" src="@firstCar.ImageUrl" alt="@firstCar.Make @firstCar.Model @firstCar.Year">
          <div class="carousel-caption d-none d-md-block">
            <h5>@firstCar.Make @firstCar.Model @firstCar.Year</h5>
          </div>
        </div>
      }
      @if (secondCar != null)
      {
        <div class="carousel-item">
          <img class="d-block w-100" src="@secondCar.ImageUrl" alt="@secondCar.Make @secondCar.Model @secondCar.Year">
          <div class="carousel-caption d-none d-md-block">
            <h5>@secondCar.Make @secondCar.Model @secondCar.Year</h5>
          </div>
        </div>
      }
      @if (thirdCar != null)
      {
        <div class="carousel-item">
          <img class="d-block w-100" src="@thirdCar.ImageUrl" alt="@thirdCar.Make @thirdCar.Model @thirdCar.Year">
          <div class="carousel-caption d-none d-md-block">
            <h5>@thirdCar.Make @thirdCar.Model @thirdCar.Year</h5>
          </div>
        </div>
      }

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
